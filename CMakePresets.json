{
    "version": 7,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 27
    },
    "configurePresets": [
        {
            "name": "default-debug",
            "binaryDir": "debug",
            "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" },
            "warnings": {
                "dev": true
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default-debug",
            "description": "Code-Compile-Debug",
            "configurePreset": "default-debug",
            "jobs": 4,
            "configuration": "Debug"
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "default-debug",
            "output": { "outputOnFailure": true },
            "execution": {
                "jobs": 4,
                "stopOnFailure": true,
                "scheduleRandom": true,
                "timeout": 2
            }
        }
    ]
}
