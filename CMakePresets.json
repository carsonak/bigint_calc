{
    "version": 7,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 27
    },
    "configurePresets": [
        {
            "name": "configure-base",
            "hidden": true,
            "cacheVariables": { "CMAKE_EXPORT_COMPILE_COMMANDS": true },
            "warnings": { "dev": true }
        },
        {
            "name": "debug-default",
            "inherits": ["configure-base"],
            "binaryDir": "debug",
            "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
        },
        {
            "name": "release",
            "inherits": ["configure-base"],
            "binaryDir": "release",
            "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" },
            "warnings": { "dev": false }
        },
        {
            "name": "release-debug",
            "inherits": ["configure-base"],
            "binaryDir": "release-debug",
            "cacheVariables": { "CMAKE_BUILD_TYPE": "RelWithDebInfo" }
        }
    ],
    "buildPresets": [
        { "name": "build-base", "hidden": true, "jobs": 4 },
        {
            "name": "debug-default",
            "description": "Code-Compile-Debug",
            "inherits": ["build-base"],
            "configurePreset": "debug-default",
            "configuration": "Debug"
        },
        {
            "name": "release",
            "inherits": ["build-base"],
            "configurePreset": "release",
            "configuration": "Release"
        },
        {
            "name": "release-debug",
            "description": "Code-Compile-Debug",
            "inherits": ["build-base"],
            "configurePreset": "release-debug",
            "configuration": "RelWithDebInfo"
        }
    ],
    "testPresets": [
        {
            "name": "tests-base",
            "hidden": true,
            "output": { "outputOnFailure": true },
            "execution": {
                "jobs": 4,
                "stopOnFailure": true,
                "scheduleRandom": true
            }
        },
        {
            "name": "debug-default",
            "inherits": ["tests-base"],
            "configurePreset": "debug-default"
        },
        {
            "name": "release",
            "inherits": ["tests-base"],
            "configurePreset": "release"
        },
        {
            "name": "release-debug",
            "inherits": ["tests-base"],
            "configurePreset": "release-debug"
        }
    ]
}
